<h1>create New Heroine</h1>
<ul>
  <% if flash[:errors] %>
  <% flash[:errors].each do |error|  %>
  <li><%= error %></li>
  <% end %>
  <% end %>
</ul>

<%= form_for @heroine do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :super_name %>
<%= f.text_field :super_name %>
<%= f.label :power %>
<%= f.collection_select :power_id, @power, :id, :name %>
<%= f.submit %>
<% end %>
